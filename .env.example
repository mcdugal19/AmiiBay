# AmiiBay Environment Variables
# Copy this file to .env and fill in your actual values

# Stripe API Keys
# Get these from: https://dashboard.stripe.com/test/apikeys
# For production, use live keys instead of test keys
SECRET_KEY=sk_test_your_stripe_secret_key_here

# Server Configuration
PORT=4000
SERVER_URL=http://localhost:3000

# Security Secrets
# IMPORTANT: Generate strong, random strings for production!
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
COOKIE_SECRET=generate_random_string_for_cookie_secret
JWT_SECRET=generate_random_string_for_jwt_secret

# Database Configuration
# Optional: Defaults to localhost:5432/Amiibay if not set
# For production, this will be provided by your hosting service
# DATABASE_URL=postgresql://username:password@localhost:5432/amiibay

# Node Environment
# Development: development
# Production: production
NODE_ENV=development
